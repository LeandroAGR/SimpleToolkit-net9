<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Sample.Core.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Sample.Core.Views.Pages"
    xmlns:local="clr-namespace:Sample.Core"
    Shell.FlyoutBehavior="Disabled"
    Title="Sample.Core">

    <Tab>
        <ShellContent
            Title="Icon"
            ContentTemplate="{DataTemplate pages:IconPage}"
            Route="IconPage" />

        <ShellContent
            Title="ContentButton"
            ContentTemplate="{DataTemplate pages:ContentButtonPage}"
            Route="ContentButtonPage" />

        <ShellContent
            Title="Popover"
            ContentTemplate="{DataTemplate pages:PopoverPage}"
            Route="PopoverPage" />
    </Tab>

</Shell>